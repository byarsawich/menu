<h1>Bootstraps Diner</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <% course_name = course[0].course_name %>
      <tr>
        <td class="course"><%= course_name %></td>
        <td class="course" colspan="2"><%= image_tag asset_url("#{course_name.singularize.downcase}.jpg"), class: "course-image" %></td>
      </tr>
      <% course.each do |dish| %>
        <tr>
          <td><%= dish.name%></td>
          <td><%= number_to_currency(dish.price) %></td>
          <td><%= dish.description %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
